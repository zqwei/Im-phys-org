<div class="ui container" id='codetab'>
  <div id='code_menu' class="ui two item secondary pointing menu">
    <a class="active item" data-tab="collection"><h2>Current release</h2></a>
    <a class="item" data-tab="submit"><h2>Submit code</h2></a>
  </div>

  <div class="ui bottom attached active tab text" data-tab="collection" id='tmp_collection'>
    {{> _code_collection}}
  </div>
  <div class="ui bottom attached tab text" data-tab="submit" id='tmp_submit'>
    {{> _code_submit}}
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    if(window.location.hash) {
      var frag = window.location.hash;
      if(frag === "#submit"){
        $('#codetab .menu .item').tab('change tab', 'submit');
      }
      else{
        alert('Page address does not exist!')
      }
    }else{
      $('#codetab .menu .item').tab({
        context: $("#codetab")
      });
    }
  });
</script>
